{
  "name": "@trpl/stylelint-config-scss",
  "version": "1.1.4",
  "author": {
    "name": "Danil Sergeev",
    "email": "tripplicate.me@gmail.com",
    "url": "https://github.com/tripplicate"
  },
  "description": "Stylelint configuration for scss",
  "keywords": [
    "stylelint-config",
    "scss"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tripplicate/configs",
    "directory": "packages/stylelint/scss"
  },
  "homepage": "https://github.com/tripplicate/configs/packages/stylelint/scss",
  "packageManager": "pnpm@8.10.0",
  "publishConfig": {
    "access": "public"
  },
  "type": "commonjs",
  "main": "src/index.js",
  "files": [
    "src"
  ],
  "scripts": {
    "lint:core": "eslint . --fix --cache --ignore-pattern '**/playground'",
    "lint:styles": "stylelint '**/*.{css,scss,sass,vue}' --fix --cache --ignore-pattern '**/playground' --allow-empty-input",
    "lint": "pnpm lint:core && pnpm lint:styles"
  },
  "peerDependencies": {
    "stylelint": "^15.0.0"
  },
  "dependencies": {
    "@trpl/stylelint-config-standard": "workspace:^",
    "postcss-scss": "^4.0.9",
    "stylelint-scss": "^5.3.1"
  },
  "devDependencies": {
    "stylelint": "^15.11.0"
  }
}
