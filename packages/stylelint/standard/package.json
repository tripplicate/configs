{
  "name": "@trpl/stylelint-config-standard",
  "version": "1.1.0",
  "author": {
    "name": "Danil Sergeev",
    "email": "tripplicate.me@gmail.com",
    "url": "https://github.com/tripplicate"
  },
  "description": "Stylelint configuration",
  "keywords": [
    "stylelint-config"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tripplicate/configs",
    "directory": "packages/stylelint/standard"
  },
  "homepage": "https://github.com/tripplicate/configs/packages/stylelint/standard",
  "packageManager": "pnpm@8.10.0",
  "publishConfig": {
    "access": "public"
  },
  "type": "commonjs",
  "main": "src/index.js",
  "files": [
    "src"
  ],
  "scripts": {
    "lint:core": "eslint . --fix --cache --ignore-pattern '**/playground'",
    "lint:styles": "stylelint '**/*.{css,scss,sass,vue}' --fix --cache --ignore-pattern '**/playground' --allow-empty-input",
    "lint": "pnpm lint:core && pnpm lint:styles"
  },
  "peerDependencies": {
    "stylelint": "^15.0.0"
  },
  "dependencies": {
    "postcss-html": "^1.5.0",
    "stylelint-config-clean-order": "^5.2.0",
    "stylelint-config-css-modules": "^4.3.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-stylistic": "^0.4.3"
  },
  "devDependencies": {
    "stylelint": "^15.11.0"
  }
}
